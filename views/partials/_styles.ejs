<style>
    body {
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #e6f0fa, #d4efdf);
        background-size: cover;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overflow-x: hidden;
    }

    /* Sidebar Styling */
    .sidebar {
        width: 260px;
        background: #d5f5e3;
        color: #2c3e50;
        height: calc(100vh - 110px);
        /* Adjusted for header (70px) + footer (40px) */
        padding: 20px;
        position: fixed;
        left: -260px;
        top: 70px;
        box-shadow: 2px 0 10px rgba(0, 0, 0, 0.2);
        transition: left 0.3s ease-in-out;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        font-family: 'Poppins', sans-serif;
        z-index: 800;
        /* Lower than footer (900) and header (1000) */
    }

    .sidebar.active {
        left: 0;
    }

    .menu-toggle {
        position: fixed;
        top: 20px;
        left: 15px;
        background: #85c1e9;
        color: #2c3e50;
        border: none;
        padding: 10px 15px;
        cursor: pointer;
        border-radius: 25px;
        z-index: 1001;
        /* Higher than header to stay clickable */
        font-family: 'Poppins', sans-serif;
        font-weight: 600;
        transition: background 0.3s ease;
    }

    .menu-toggle:hover {
        background: #5dade2;
    }

    .sidebar .sidebar-menu {
        list-style: none;
        padding: 0;
        margin-top: 20px;
    }

    .sidebar .menu-item {
        margin: 20px 0;
    }

    .sidebar .menu-link {
        text-decoration: none;
        color: #2c3e50;
        display: block;
        padding: 12px 15px;
        border-radius: 10px;
        transition: all 0.3s ease;
        cursor: pointer;
        position: relative;
        font-size: 1.1em;
        font-weight: 500;
    }

    .sidebar .menu-link:hover {
        background: #2ecc71;
        color: white;
        transform: translateX(5px);
    }

    .sidebar .has-submenu .menu-link::after {
        content: 'â–¼';
        position: absolute;
        right: 15px;
        font-size: 0.9em;
        transition: transform 0.3s ease;
    }

    .sidebar .has-submenu.active .menu-link::after {
        transform: rotate(180deg);
    }

    .sidebar .submenu {
        list-style: none;
        padding: 0;
        margin: 5px 0 0 10px;
        display: none;
        background: #e8f8f0;
        border-radius: 10px;
    }

    .sidebar .submenu li {
        margin: 8px 0;
    }

    .sidebar .submenu li a {
        text-decoration: none;
        color: #2c3e50;
        display: block;
        padding: 10px 15px 10px 25px;
        border-radius: 8px;
        transition: all 0.3s ease;
        font-size: 1em;
        font-weight: 400;
    }

    .sidebar .submenu li a:hover {
        background: #2ecc71;
        color: white;
        transform: translateX(3px);
    }

    .sidebar .has-submenu.active .submenu {
        display: block;
    }

    /* Main Content */
    .main-content {
        flex: 1;
        width: 100%;
        padding: 90px 20px 60px;
        /* Increased bottom padding for fixed footer */
        transition: margin-left 0.3s ease-in-out;
        margin-left: 0;
    }

    .main-content.shift {
        margin-left: 260px;
    }

    /* Hero Section */
    .hero {
        background: linear-gradient(135deg, #3498db, #2ecc71);
        color: white;
        text-align: center;
        padding: 100px 20px;
        border-radius: 0 0 20px 20px;
    }

    .hero h1 {
        font-size: 3.5em;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .hero p {
        font-size: 1.5em;
        margin-bottom: 30px;
    }

    .hero-btn {
        background: #fff;
        color: #3498db;
        padding: 15px 30px;
        border-radius: 25px;
        text-decoration: none;
        font-weight: bold;
        font-size: 1.2em;
        transition: all 0.3s ease;
    }

    .hero-btn:hover {
        background: #ecf0f1;
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    /* Features Section */
    .features {
        padding: 60px 20px;
        text-align: center;
        background: #f5f6f5;
        margin: 20px 0;
        border-radius: 20px;
    }

    .features h2 {
        font-size: 2.5em;
        margin-bottom: 40px;
        color: #2c3e50;
    }

    .card-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 30px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .card {
        padding: 25px;
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 250px;
    }

    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    }

    .card img {
        width: 80px;
        height: 80px;
        margin-bottom: 15px;
    }

    .card h3 {
        font-size: 1.6em;
        color: #2c3e50;
        margin-bottom: 10px;
    }

    .card p {
        font-size: 1.1em;
        color: #7f8c8d;
        margin: 0;
    }

    /* About Section */
    .about {
        padding: 60px 20px;
        text-align: center;
        background: #ecf0f1;
        border-radius: 20px;
        margin: 20px 0;
    }

    .about h2 {
        font-size: 2.5em;
        margin-bottom: 20px;
        color: #2c3e50;
    }

    .about p {
        calc(100vh - 110px) font-size: 1.2em;
        max-width: 800px;
        margin: 0 auto;
        color: #555;
    }

    /* CTA Section */
    .cta {
        padding: 60px 20px;
        text-align: center;
        background: linear-gradient(135deg, #3498db, #2ecc71);
        color: white;
        border-radius: 20px 20px 0 0;
    }

    .cta h2 {
        font-size: 2.2em;
        margin-bottom: 25px;
    }

    .cta-btn {
        background: #2ecc71;
        color: white;
        padding: 15px 40px;
        border-radius: 25px;
        text-decoration: none;
        font-size: 1.3em;
        font-weight: bold;
        transition: all 0.3s ease;
    }

    .cta-btn:hover {
        background: #27ae60;
        transform: scale(1.05);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .hero {
            padding: 80px 15px;
        }

        .hero h1 {
            font-size: 2.5em;
        }

        .hero p {
            font-size: 1.3em;
        }

        .card-container {
            grid-template-columns: 1fr;
        }

        .main-content.shift {
            margin-left: 0;
        }
    }
</style>