<!DOCTYPE html>
<html lang="en" class="theme-fs-sm" data-bs-theme="light" data-bs-theme-color="default" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <title>Sign Up - MediTrack</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="/images/logo.png" />

    <!-- CSS Files -->
    <link rel="stylesheet" href="/css/core/libs.min.css" />
    <link rel="stylesheet" href="/css/xray.min.css?v=1.2.0" />
    <link rel="stylesheet" href="/css/custom.min.css?v=1.2.0" />

    <style>
        .sign-in-page {
            display: flex;
            align-items: center;
            min-height: 100vh;
            justify-content: center;
            background: linear-gradient(135deg, #e6f0fa, #d4efdf);
            /* Homepage background */
            font-family: 'Poppins', sans-serif;
        }

        .sign-in-container {
            max-width: 1100px;
            width: 100%;
            background: #ffffff;
            /* White for contrast */
            border-radius: 20px;
            /* Matches homepage section radius */
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            display: flex;
            flex-wrap: wrap;
        }

        .sign-in-left {
            flex: 1;
            background: linear-gradient(135deg, #3498db, #2ecc71);
            /* Homepage hero/CTA gradient */
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 40px;
            min-width: 40%;
        }

        .sign-in-left img {
            width: 200px;
            max-width: 80%;
            margin-bottom: 20px;
        }

        .sign-in-right {
            flex: 1.2;
            padding: 50px;
            min-width: 50%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background: #ecf0f1;
            /* Light gray from homepage */
        }

        .form-group {
            margin-bottom: 15px;
        }

        .btn-primary-subtle {
            width: 100%;
            padding: 12px;
            font-size: 1rem;
            background-color: #2ecc71;
            /* Homepage green */
            color: white;
            border: none;
            border-radius: 25px;
            /* Matches homepage button style */
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-primary-subtle:hover {
            background-color: #27ae60;
            /* Homepage hover green */
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .btn-primary-subtle:disabled {
            background-color: #cccccc;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        a {
            color: #3498db;
            /* Homepage blue for links */
            text-decoration: none;
        }

        a:hover {
            color: #2980b9;
            /* Darker blue for hover */
            text-decoration: underline;
        }

        @media (max-width: 768px) {
            .sign-in-container {
                flex-direction: column;
                align-items: center;
                text-align: center;
            }

            .sign-in-left,
            .sign-in-right {
                width: 100%;
                min-width: 100%;
                padding: 30px;
            }
        }
    </style>
</head>

<body>
    <div class="sign-in-page">
        <div class="sign-in-container">
            <div class="sign-in-left">
                <a href="/"><img src="/images/logo.png" alt="MediTrack Logo" /></a>
                <h4>Manage Your Orders</h4>
                <p>Track and manage all your clinic & patient details in one place.</p>
            </div>
            <div class="sign-in-right">
                <h1 class="mb-4">Admin Sign Up</h1>
                <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger"><%= error %></div>
                <% } %>
                <form id="signupForm">
                    <div class="form-group">
                        <label for="fullName">Your Full Name</label>
                        <input type="text" class="form-control" id="fullName" placeholder="Your Full Name" required />
                    </div>
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="email" class="form-control" id="email" placeholder="Enter email" required />
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone Number</label>
                        <input type="tel" class="form-control" id="phone" placeholder="Your Phone Number" required />
                    </div>
                    <div class="form-group">
                        <label for="organizationId">Organization</label>
                        <select class="form-control" id="organizationId" name="organizationId" required>
                            <option value="">Select an Organization</option>
                            <% organizations.forEach(org => { %>
                            <option value="<%= org.organizationId %>"><%= org.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="password" placeholder="Password" required />
                            <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="confirmPassword"
                                placeholder="Confirm Password" required />
                            <button class="btn btn-outline-secondary" type="button" id="toggleConfirmPassword">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="termsCheck" required />
                        <label class="form-check-label" for="termsCheck">
                            I accept <a href="/terms-of-service">Terms and Conditions</a>
                        </label>
                    </div>
                    <button type="submit" class="btn-primary-subtle" id="signUpButton">Sign Up</button>
                    <div class="text-center mt-3">
                        <span>Already have an account? <a href="/sign-in">Sign In</a></span>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap Modal for Dynamic Alerts -->
    <div class="modal fade" id="alertModal" tabindex="-1" aria-labelledby="alertModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="alertModalLabel">Notification</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="alertModalBody"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showAlert(title, message) {
            document.getElementById("alertModalLabel").innerText = title;
            document.getElementById("alertModalBody").innerText = message;
            var myModal = new bootstrap.Modal(document.getElementById("alertModal"));
            myModal.show();
        }

        document.addEventListener("DOMContentLoaded", function () {
            const termsCheck = document.getElementById("termsCheck");
            const signUpButton = document.getElementById("signUpButton");

            // Initially disable the button
            signUpButton.disabled = true;

            termsCheck.addEventListener("change", function () {
                signUpButton.disabled = !this.checked;
            });

            const registerForm = document.getElementById("signupForm");

            registerForm.addEventListener("submit", async function (event) {
                event.preventDefault();

                const fullName = document.getElementById("fullName").value.trim();
                const email = document.getElementById("email").value.trim();
                const phone = document.getElementById("phone").value.trim();
                const organizationId = document.getElementById("organizationId").value;
                const password = document.getElementById("password").value;
                const confirmPassword = document.getElementById("confirmPassword").value;
                const termsChecked = document.getElementById("termsCheck").checked;
                let emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                let phoneRegex = /^\d{10,15}$/;

                if (fullName === "") {
                    showAlert("Error", "Please enter your full name.");
                    return;
                }
                if (!emailRegex.test(email)) {
                    showAlert("Error", "Please enter a valid email address.");
                    return;
                }
                if (!phoneRegex.test(phone)) {
                    showAlert("Error", "Please enter a valid phone number (10-15 digits).");
                    return;
                }
                if (!organizationId) {
                    showAlert("Error", "Please select an organization.");
                    return;
                }
                if (password.length < 8) {
                    showAlert("Error", "Password must be at least 8 characters long.");
                    return;
                }
                if (!termsChecked) {
                    showAlert("Error", "You must accept the Terms and Conditions.");
                    return;
                }
                if (password !== confirmPassword) {
                    showAlert("Error", "Passwords do not match!");
                    return;
                }

                const userData = { name: fullName, email, phone, password, organizationId };

                try {
                    const response = await fetch("/register-admin", {
                        method: "POST",
                        credentials: 'include',
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify(userData),
                    });

                    const result = await response.json();
                    if (response.ok) {
                        showAlert("Success", "Registration successful! Redirecting...");
                        setTimeout(() => { window.location.href = "/sign-in"; }, 2000);
                    } else {
                        showAlert("Error", result.error || "Registration failed. Please try again.");
                    }
                } catch (error) {
                    console.error("Error:", error);
                    showAlert("Error", "Something went wrong. Please try again later.");
                }
            });
        });

        document.addEventListener('DOMContentLoaded', function () {
            const togglePassword = document.querySelector('#togglePassword');
            const password = document.querySelector('#password');
            const toggleConfirmPassword = document.querySelector('#toggleConfirmPassword');
            const confirmPassword = document.querySelector('#confirmPassword');

            function togglePasswordVisibility(inputField, toggleButton) {
                const type = inputField.getAttribute('type') === 'password' ? 'text' : 'password';
                inputField.setAttribute('type', type);
                toggleButton.querySelector('i').classList.toggle('bi-eye');
                toggleButton.querySelector('i').classList.toggle('bi-eye-slash');
            }

            togglePassword.addEventListener('click', function () {
                togglePasswordVisibility(password, this);
            });

            toggleConfirmPassword.addEventListener('click', function () {
                togglePasswordVisibility(confirmPassword, this);
            });
        });
    </script>
</body>

</html>