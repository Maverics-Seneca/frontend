<!DOCTYPE html>
<html lang="en" class="theme-fs-sm" data-bs-theme="light" data-bs-theme-color="default" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <title>Sign In As Caretaker - MediTrack</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="/images/logo.png" />

    <!-- CSS Files -->
    <link rel="stylesheet" href="/css/core/libs.min.css" />
    <link rel="stylesheet" href="/css/xray.min.css?v=1.2.0" />
    <link rel="stylesheet" href="/css/custom.min.css?v=1.2.0" />

    <style>
        .sign-in-page {
            display: flex;
            align-items: center;
            min-height: 100vh;
            justify-content: center;
            background: linear-gradient(135deg, #e6f0fa, #d4efdf); /* Homepage background */
            font-family: 'Poppins', sans-serif;
        }

        .sign-in-container {
            max-width: 1100px;
            width: 100%;
            background: #ffffff; /* White for contrast */
            border-radius: 20px; /* Matches homepage section radius */
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            display: flex;
            flex-wrap: wrap;
        }

        .sign-in-left {
            flex: 1;
            background: linear-gradient(135deg, #3498db, #2ecc71); /* Homepage hero/CTA gradient */
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 40px;
            min-width: 40%;
            position: relative;
        }

        .sign-in-left img {
            width: 350px;
            max-width: 95%;
            margin-bottom: 20px;
            position: relative;
            left: -35px;
        }

        .sign-in-left h4 {
            font-size: 1.7rem;
            font-weight: 600;
            margin-bottom: 10px;
            position: relative;
            left: -20px;
        }

        .sign-in-left p {
            font-size: 1.1rem;
            max-width: 80%;
            position: relative;
            left: -20px;
        }

        .sign-in-right {
            flex: 1.2;
            padding: 50px;
            min-width: 50%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background: #ecf0f1; /* Light gray from homepage */
        }

        .form-group {
            margin-bottom: 15px;
        }

        .btn-primary-subtle {
            width: 100%;
            padding: 12px;
            font-size: 1rem;
            background-color: #2ecc71; /* Homepage green */
            color: white;
            border: none;
            border-radius: 25px; /* Matches homepage button style */
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-primary-subtle:hover {
            background-color: #27ae60; /* Homepage hover green */
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .text-muted {
            color: #7f8c8d !important; /* Matches homepage card text */
        }

        .text-muted:hover {
            color: #3498db !important; /* Homepage blue */
            text-decoration: underline;
        }

        a {
            color: #3498db; /* Homepage blue for links */
            text-decoration: none;
        }

        a:hover {
            color: #2980b9; /* Darker blue for hover */
            text-decoration: underline;
        }

        @media (max-width: 768px) {
            .sign-in-container {
                flex-direction: column;
                align-items: center;
                text-align: center;
            }

            .sign-in-left,
            .sign-in-right {
                width: 100%;
                min-width: 100%;
                padding: 30px;
            }

            .sign-in-left img {
                width: 280px;
                left: 0;
            }

            .sign-in-left h4,
            .sign-in-left p {
                left: 0;
            }
        }
    </style>
</head>

<body>
    <div class="sign-in-page">
        <div class="sign-in-container">
            <!-- Left Side (Logo & Description) -->
            <div class="sign-in-left">
                <a href="/"><img src="/images/logo.png" alt="MediTrack Logo" /></a>
                <h4>Welcome Back</h4>
                <p>Sign in as caretaker to see patient info.</p>
            </div>

            <!-- Right Side (Sign-In Form) -->
            <div class="sign-in-right">
                <h1 class="mb-4">Sign In As Caretaker</h1>
                <form id="signInForm">
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="email" class="form-control" id="email" placeholder="Enter email" />
                    </div>
                    <div class="form-group mt-3">
                        <label for="token">Token</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="token" placeholder="Token" />
                            <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between w-100 align-items-center mt-3">
                        <div class="custom-control custom-checkbox d-flex d-inline-block">
                            <input type="checkbox" class="custom-control-input me-1" id="customCheck1" />
                            <label class="custom-control-label" for="customCheck1">Remember Me</label>
                        </div>
                    </div>
                    <button type="submit" class="btn-primary-subtle mt-3">Sign In</button>
                </form>
                <div id="error-message" style="color: red;">
                    <% if (typeof error !== "undefined" && error) { %>
                    <p><%= error %></p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Modal for Dynamic Alerts -->
    <div class="modal fade" id="alertModal" tabindex="-1" aria-labelledby="alertModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="alertModalLabel">Notification</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="alertModalBody">
                    <!-- Message will be dynamically inserted here -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript Files -->
    <script src="/js/core/libs.min.js"></script>
    <script src="/js/xray.js?v=1.2.0" defer></script>
    <script src="/js/sidebar.js?v=1.2.0" defer></script>
    <script>
        function showAlert(title, message) {
            document.getElementById("alertModalLabel").innerText = title;
            document.getElementById("alertModalBody").innerText = message;
            var myModal = new bootstrap.Modal(document.getElementById("alertModal"));
            myModal.show();
        }

        document.getElementById("signInForm").addEventListener("submit", async function (event) {
            event.preventDefault(); // Stop form from submitting the traditional way

            // Get values from form fields
            const email = document.getElementById("email").value;
            const password = document.getElementById("token").value;

            try {
                // Send a POST request to /login-caretaker with email and token
                const response = await fetch("/login-caretaker", {
                    method: "POST",
                    credentials: 'include',
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ email, password })
                });

                // Redirect on success, or show error message
                if (response.redirected) {
                    window.location.href = response.url; // Redirect to dashboard
                } else {
                    const errorText = await response.text();
                    showAlert("Error", "Login failed, Please try again");
                }
            } catch (error) {
                showAlert("Error", "Login failed, Please try again");
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
            const togglePassword = document.querySelector('#togglePassword');
            const password = document.querySelector('#token');
            
            togglePassword.addEventListener('click', function() {
                const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                password.setAttribute('type', type);
                
                this.querySelector('i').classList.toggle('bi-eye');
                this.querySelector('i').classList.toggle('bi-eye-slash');
            });
        });
    </script>
</body>
</html>