<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Refill Alerts - MediTrack</title>
    
    <!-- Bootstrap for modern UI -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #e3f2fd;
        }

        .container {
            max-width: 900px;
            margin: 40px auto;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 2px 4px 10px rgba(0, 0, 0, 0.1);
            background: #ffffff;
        }

        .card-title {
            font-size: 1.4rem;
            font-weight: bold;
            color: #2c3e50;
        }

        .btn {
            border-radius: 8px;
        }

        .btn-primary {
            background-color: #1e88e5;
            border: none;
        }

        .btn-warning {
            background-color: #ffb300;
            border: none;
        }

        .btn-secondary {
            background-color: #546e7a;
            border: none;
        }

        .badge {
            font-size: 0.9rem;
            padding: 5px 10px;
        }

        .link-button {
            color: #1e88e5;
            text-decoration: none;
            font-weight: bold;
            cursor: pointer;
        }

        .link-button:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>

    <div class="container">
        <!-- Refill Alerts Table -->
        <div class="card p-4 mb-4">
            <h2 class="card-title text-center text-primary">ðŸ“¢ Refill Alerts</h2>
            <table class="table table-hover mt-3">
                <thead class="table-dark">
                    <tr>
                        <th>Medication</th>
                    </tr>
                </thead>
                <tbody id="alertBody">
                    
                </tbody>
            </table>
        </div>

        <!-- Medication Details Section -->
        <div class="card p-4">
            <h3 class="card-title text-primary">ðŸ’Š Medication Details</h3>
            <div class="row">
                <div class="col-md-6">
                    <label for="medication" class="form-label">Select Medication</label>
                    <select class="form-control" id="medication" onchange="populateFields()">
                        <option value="">-- Select --</option>
                        <% medications.forEach(med => { %>
                            <option value="<%= med.name %>"></option>
                        <% }) %>
                    </select>
                    <p class="mt-2">
                        <a href="/dashboard/add-medicines" class="link-button">âž• Add New Medicine</a>
                    </p>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Dosage (mg)</label>
                    <input type="number" class="form-control" id="dosage">
                </div>
                <div class="col-md-6">
                    <label class="form-label">Prescribed By</label>
                    <input type="text" class="form-control" id="doctor">
                </div>
            </div>

            <h3 class="card-title mt-4 text-primary">ðŸ“¦ Inventory Status</h3>
            <div class="row">
                <div class="col-md-6">
                    <label class="form-label">Remaining Quantity</label>
                    <input type="number" class="form-control" id="remainingQty" oninput="calculateDaysLeft()">
                </div>
                <div class="col-md-6">
                    <label class="form-label">Daily Consumption</label>
                    <input type="number" class="form-control" id="dailyConsumption" oninput="calculateDaysLeft()">
                </div>
                <div class="col-md-6 mt-3">
                    <label class="form-label">Estimated Days Left</label>
                    <input type="text" class="form-control" id="daysLeft" readonly>
                </div>
            </div>

            <h3 class="card-title mt-4 text-primary">ðŸ”” Refill Settings</h3>
            <div class="row">
                <div class="col-md-6">
                    <label class="form-label">Refill Reminder Date</label>
                    <input type="date" class="form-control" id="refillDate">
                </div>
            </div>

            <div class="mt-4">
                <button class="btn btn-warning me-2" onclick="requestRefill()">Refill Now</button>
                    
            </div>
        </div>
    </div>

    <script>
        let refillHistory = [];

        // Load medications dynamically (Mock API call)
        function loadMedications() {
            fetch('/api/medications') // Replace with actual API URL
                .then(response => response.json())
                .then(medications => {
                    let medicationSelect = document.getElementById("medication");
                    medicationSelect.innerHTML = '<option value="">-- Select --</option>'; // Reset dropdown
                    medications.forEach(med => {
                        let option = document.createElement("option");
                        option.value = med.name;
                        option.textContent = med.name;
                        medicationSelect.appendChild(option);
                    });
                })
                .catch(error => console.error("Error fetching medications:", error));
        }

        function populateFields() {
            let selectedMedication = document.getElementById("medication").value;
            document.getElementById("dosage").value = "";
            document.getElementById("doctor").value = "";
        }

        function calculateDaysLeft() {
            let remaining = parseInt(document.getElementById("remainingQty").value) || 0;
            let daily = parseInt(document.getElementById("dailyConsumption").value) || 1;
            let daysLeft = remaining > 0 ? Math.floor(remaining / daily) : 0;
            document.getElementById("daysLeft").value = daysLeft;
        }

        function requestRefill() {
            let med = document.getElementById("medication").value;
            let dosage = document.getElementById("dosage").value;
            let doctor = document.getElementById("doctor").value;
            let date = new Date().toLocaleDateString();
            
            if (!med || !dosage || !doctor) {
                alert("Please fill in all details before requesting a refill.");
                return;
            }

            refillHistory.push({ medicine: med, dosage: dosage, doctor: doctor, date: date, quantity: 30 });
            alert(`Refill requested for ${med} (${dosage}mg) prescribed by ${doctor}`);
        }

        document.addEventListener("DOMContentLoaded", loadMedications);
    </script>

</body>
</html>
