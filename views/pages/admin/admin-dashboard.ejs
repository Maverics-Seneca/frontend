<!DOCTYPE html>
<html lang="en">

<head>
    <title>Admin Dashboard - MediTrack</title>
    <%- include('../../partials/_header') %>
    <%- include('../../partials/_styles') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #e6f0fa, #d4efdf);
            min-height: 100vh;
            overflow-x: hidden;
        }

        .main-content {
            flex: 1;
            width: 100%;
            padding: 20px;
            transition: margin-left 0.3s ease-in-out;
            margin-left: 0;
            /* Default state: no margin when sidebar is hidden */
        }

        .main-content.shift {
            margin-left: 260px;
            /* Only apply margin when sidebar is active */
        }

        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
            background: #fff;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .dashboard-container h1 {
            font-size: 2.5em;
            font-weight: 600;
            margin-bottom: 40px;
            text-align: center;
            color: #2c3e50;
        }

        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 30px;
        }

        .dashboard-card {
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 25px;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 200px;
        }

        .dashboard-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

        .dashboard-card i {
            font-size: 2.5rem;
            margin-bottom: 15px;
            color: #3498db;
        }

        .dashboard-card h3 {
            font-size: 1.6em;
            color: #2c3e50;
            margin-bottom: 10px;
        }

        .dashboard-card p {
            font-size: 1.1em;
            color: #7f8c8d;
            margin: 0;
        }

        .dashboard-card .count {
            font-size: 1.8rem;
            font-weight: bold;
            color: #2ecc71;
            margin-top: 10px;
        }

        .analytics-section {
            margin-top: 40px;
            padding: 30px;
            background: #ecf0f1;
            border-radius: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .analytics-section h2 {
            font-size: 2em;
            margin-bottom: 25px;
            color: #2c3e50;
        }

        .recent-logs {
            max-height: 250px;
            overflow-y: auto;
            padding: 15px;
            background: #f5f6f5;
            border-radius: 10px;
        }

        .logs-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 1em;
            color: #2c3e50;
        }

        .logs-table th,
        .logs-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .logs-table th {
            background: #e8f8f0;
            font-weight: 600;
        }

        .logs-table td {
            color: #555;
        }

        .error-message {
            color: #e74c3c;
            text-align: center;
            font-size: 1.2em;
            margin-bottom: 20px;
            font-weight: 500;
        }

        @media (max-width: 768px) {
            .main-content {
                padding: 15px;
            }

            .dashboard-container {
                padding: 20px;
            }

            .dashboard-grid {
                grid-template-columns: 1fr;
            }

            .dashboard-container h1 {
                font-size: 2em;
            }

            .analytics-section h2 {
                font-size: 1.5em;
            }

            .logs-table {
                font-size: 0.9em;
            }

            .main-content.shift {
                margin-left: 0;
            }

            /* Reset margin on small screens if needed */
        }
    </style>
</head>

<body>
    <%- include('../../partials/_sidebar') %>

    <div class="main-content">
        <div class="dashboard-container">
            <h1>Admin Dashboard</h1>
            <% if (typeof error !== 'undefined' && error) { %>
            <p class="error-message"><%= error %></p>
            <% } %>
            <div class="dashboard-grid">
                <div class="dashboard-card" onclick="window.location.href='/all-patients'">
                    <i class="fas fa-users"></i>
                    <h3>Total Patients</h3>
                    <p>Number of registered patients</p>
                    <div class="count" id="patientCount"><%= patients ? patients.length : 0 %></div>
                </div>

                <div class="dashboard-card" onclick="window.location.href='/all-reminders'">
                    <i class="fas fa-bell"></i>
                    <h3>Total Reminders</h3>
                    <p>All active reminders across patients</p>
                    <div class="count" id="reminderCount"><%= reminders ? reminders.length : 0 %></div>
                </div>

                <div class="dashboard-card" onclick="window.location.href='/logs'">
                    <i class="fas fa-file-alt"></i>
                    <h3>Recent Logs</h3>
                    <p>Latest system activity</p>
                    <div class="count" id="logCount"><%= recentLogs ? recentLogs.length : 0 %></div>
                </div>
            </div>

            <div class="analytics-section">
                <h2>Recent Activity Logs</h2>
                <div class="recent-logs">
                    <% if (recentLogs && recentLogs.length > 0) { %>
                    <table class="logs-table">
                        <thead>
                            <tr>
                                <th>Time</th>
                                <th>Action</th>
                                <th>Entity</th>
                                <th>Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% recentLogs.slice(0, 5).forEach(log => { %>
                            <tr>
                                <td><%= log.timestamp ? new Date(log.timestamp).toLocaleString() : 'N/A' %></td>
                                <td><%= log.action || 'N/A' %></td>
                                <td><%= log.entity || 'N/A' %></td>
                                <td><%= log.entityName || 'N/A' %></td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                    <% } else { %>
                    <p>No recent logs available.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script>
        const menuToggle = document.querySelector('.menu-toggle');
        const sidebar = document.querySelector('.sidebar');
        const mainContent = document.querySelector('.main-content');

        if (menuToggle && sidebar && mainContent) {
            menuToggle.addEventListener('click', () => {
                sidebar.classList.toggle('active');
                mainContent.classList.toggle('shift'); // Toggle shift class to control margin
            });
        }

        // Ensure submenu functionality (if present in _sidebar partial)
        document.querySelectorAll('.has-submenu .menu-link').forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const parent = link.parentElement;
                parent.classList.toggle('active');
            });
        });
    </script>
    <%- include('../partials/_scripts') %>
    <%- include('../partials/_footer') %>